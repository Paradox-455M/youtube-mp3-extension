{
  "manifest_version": 3,
  "name": "YouTube to MP3 Converter",
  "version": "1.0",
  "description": "Convert YouTube videos to MP3",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:4000/*",
    "https://www.youtube.com/*",
    "https://youtu.be/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js"
    
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
    
  }
} 