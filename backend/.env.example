# Server Configuration
PORT=4000

# FFmpeg Configuration (optional - auto-detected if not set)
# FFMPEG_PATH=/opt/homebrew/bin/ffmpeg
# FFPROBE_PATH=/opt/homebrew/bin/ffprobe

# File Size Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Cleanup Configuration
FILE_CLEANUP_TIME=3600000  # 1 hour in milliseconds

# CORS Configuration
# Comma-separated list of allowed origins
# ALLOWED_ORIGINS=chrome-extension://YOUR_EXTENSION_ID,http://localhost:4000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=10    # Max requests per window
DOWNLOAD_RATE_LIMIT_WINDOW_MS=60000  # 1 minute
DOWNLOAD_RATE_LIMIT_MAX_REQUESTS=20  # Max download requests per minute

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug
NODE_ENV=development  # Options: development, production
